{
  "extends": ["plugin:prettier/recommended"],
  "globals": {
    "document": true,
    "window": true,
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "prefer-destructuring": "error",
    "semi": "error"
  },
  "env": {
    "es6": true,
    "shared-node-browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  }
}
